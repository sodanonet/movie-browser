{
  "name": "movie-browser",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "analyze": "npm run build && open dist/stats.html",
    "analyze:ci": "npm run build",
    "build": "npm run cleanup && tsc && vite build",
    "build:server": "vite build --ssr src/ssr/entry-server.tsx --outDir dist/server",
    "build:ssr": "npm run build && npm run build:server",
    "cleanup": "rm -rf dist",
    "dev": "vite",
    "dev:ssr": "nodemon ssr-server.js",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "preview:ssr": "node ssr-server.js",
    "test": "jest",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:coverage": "jest --coverage",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:integration": "jest --testPathPatterns=integration",
    "test:unit": "jest --testPathIgnorePatterns=integration",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.9.0",
    "axios": "^1.11.0",
    "express": "^5.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.8.2",
    "sass": "^1.92.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "axios-mock-adapter": "^2.1.0",
    "cypress": "^15.1.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "jsdom": "^26.1.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "ts-jest": "^29.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^3.2.4",
    "whatwg-fetch": "^3.6.20"
  }
}
